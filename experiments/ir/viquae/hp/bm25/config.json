{
    "study_name": "bm25_for_vlt5_opt",
    "storage": "sqlite:///experiments/ir/viquae/hp/bm25/hp.db",
    "kb_kwargs": {
        "/scratch_global/stage_pgrimal/data/CVLP/data/datasets/passages": {
            "load_dataset": true,
            "index_kwargs": {
                "BM25": {
                    "column": "passage",
                    "es": true,
                    "kind_str": "TEXT",
                    "key": "input",
                    "load": false,
                    "normalization": {
                        "method": "normalize",
                        "mean": 20.1111,
                        "std": 5.85003
                    },
                    "interpolation_weight": 0.3,
                    "es_index_name": "bm25_vlt5_test",
                    "es_index_config": {
                        "settings": {
                            "similarity": {
                                "karpukhin": {
                                    "b": 0.1,
                                    "k1": 0.3,
                                    "type":"BM25"
                                }
                            }
                        },
                        "mappings": {
                            "properties": {
                                "text": {
                                    "type": "text",
                                    "analyzer": "standard",
                                    "similarity": "karpukhin"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "reference_kb_path": "/scratch_global/stage_pgrimal/data/CVLP/data/datasets/passages",
    "map_kwargs": {
        "batch_size": 256,
        "desc": "searching"
    },
    "es_client_kwargs": {
        "hosts": "http://localhost:9200"
    }
}




